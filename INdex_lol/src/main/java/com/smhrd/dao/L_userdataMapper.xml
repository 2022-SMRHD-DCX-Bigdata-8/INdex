	<insert id="insertPlayData"
		parameterType="com.smhrd.entity.L_userdata">
		INSERT INTO l_userdata
		VALUES
		(
		#{u_idx},
		#{u_id},
		#{u_rank},
		#{u_gold},
		#{u_level},
		#{u_kda},
		#{u_damage},
		#{u_playtime},
		#{u_sigthscore},
		#{u_gamecnt},
		#{u_winlose},
